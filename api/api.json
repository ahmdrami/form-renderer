{
   "config": [
      {
         "id": "name",
         "type": "text",
         "control": "input",
         "label": "First Name",
         "placeholder": "",
         "validations": ["required", "maxLength:25"]
      },
      {
         "id": "password",
         "type": "password",
         "control": "input",
         "label": "Password",
         "placeholder": "",
         "readonly": true,
         "validations": ["required"]
      },
      {
         "id": "email",
         "type": "email",
         "control": "input",
         "label": "Email",
         "placeholder": "",
         "validations": ["required", "email"]
      },
      {
         "id": "age",
         "type": "number",
         "control": "input",
         "label": "Age",
         "placeholder": "",
         "validations": ["required", "pattern:([0-9]|[1-8][0-9]|9[0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])"]
      },
      {
         "id": "favouriteNumber",
         "type": "number",
         "control": "input",
         "label": "Favourite Number",
         "placeholder": "",
         "validations": ["min:1", "max:99"]
      },
      {
         "id": "message",
         "type": "text",
         "control": "textarea",
         "label": "Message",
         "placeholder": "",
         "validations": ["maxLength:25"]
      },

      {
         "id": "gender",
         "type": "radio",
         "control": "radio",
         "label": "Gender",
         "placeholder": "",
         "validations": ["required"],
         "options": [{ "id": 1, "value": "male" }, { "id": 2, "value": "female" }]
      },
      
      {
         "id": "colour",
         "type": "checkbox",
         "control": "checkbox",
         "label": "Favourite colour?",
         "placeholder": "",
         "validations": ["required"],
         "options": [{ "id": 1, "value": "Blue" }, { "id": 2, "value": "Purple" }, { "id": 3, "value": "Red" }]
      },
     
      {
         "id": "country",
         "type": "text",
         "control": "select",
         "label": "Country",
         "placeholder": "Please select a country",
         "validations": ["required"],
         "options": [{ "id": 1, "value": "England" }, { "id": 2, "value": "Finland" }, { "id": 3, "value": "Iceland" }]
      },
      {
         "id": "city",
         "type": "text",
         "control": "select",
         "label": "City",
         "placeholder": "Please select a city",
         "validations": ["required"],
         "bind": "country",
         "bindUrl": "cities"
      },
      {
         "id": "submit",
         "type": "submit",
         "control": "button",
         "label": "Submit"
      }
   ],
   "formData": {
      "name": "John Adam",
      "email": "john.doe@jmail.com",
      "age": "44",
      "message": "Lorem ipsum gentloi",
      "gender": "male",
      "colour": ["Blue", "Purple"],
      "country": "Finland"
   },

   "cities": [
      {  
         "id": "England",
         "options": [{ "id": 1, "value": "Oxford" }, { "id": 2, "value": "London" }, { "id": 3, "value": "Manchester" }]
      }
   ],

   "errors": [
      { "id": "email", "error": "Incorrect email"},
      { "id": "required", "error": "This field is required" },
      { "id": "maxlength", "error": "Max length should be %s"},
      { "id": "minLength", "error": "Min length should be %s"},
      { "id": "max", "error": "Max number should be %s"},
      { "id": "min", "error": "Min number should be %s"}

   ]
}
